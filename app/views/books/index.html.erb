  <%if @books.present? %>
    <h4>Listing Books</h4>
  </br></br>
  <div class="overflow">
    <table class="table table-condensed">
            <thead>
              <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Book Name</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <%if book.image.present?%>
                    <td><%= image_tag book.image.url %></td>
                  <%else%>
                    <td><%= image_tag "missing.png",:width=>"100", :height => "100" %></td>
                  <%end%>
                  <td><%= book.title %></td>
                  <td><%= book.description %></td>
                  <td><%= book.book_file_name %></td>
                  <td colspan="2"><%= link_to 'Show', book, :class => "btn btn-primary" %>
                  <%= link_to 'Edit', edit_book_path(book), :class => "btn btn-warning" %>
                  <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%else%>
            <h4> No Item to display <h4>
          <%end%>
        </div>
<style>
.overflow{
  height:465px;
  overflow: auto;
  border: 1px solid;
}
table.table { 
  table-layout:fixed;
  overflow: hidden;
  word-wrap:break-word; 
}
img{
  height:100px;
  width:100px;
}
</style>