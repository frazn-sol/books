    <h4>Listing Books</h4>
    <table class="table table-condensed">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Description</th>
                <th>Book Name</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <%if book.image.present?%>
                    <td><%= image_tag book.image.url(:thumb) %></td>
                  <%else%>
                    <td><%= image_tag "missing.png",:width=>"100", :height => "100" %></td>
                  <%end%>
                  <td><%= book.title %></td>
                  <td><%= book.description %></td>
                  <td><%= book.book_file_name %></td>
                  <td><%= link_to 'Show', book, :class => "btn btn-primary" %></td>
                  <td><%= link_to 'Edit', edit_book_path(book), :class => "btn btn-warning" %></td>
                  <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      