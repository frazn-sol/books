<div class="container">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin"}) do |f| %>
	<h2 class="form-signin-heading">Login</h2>
	<%= f.email_field :email, :class => "form-control space", :placeholder => "Email address", :required => "", :autofocus =>"true"%>
	<%= f.password_field :password, :class => "form-control", :placeholder => "Password", :required => ""%>

	<% if devise_mapping.rememberable? -%>
	<label class="checkbox">
      <%= f.check_box :remember_me %> Remember me
      <div class = "link">
      	<%= render :partial => "devise/shared/links"%>	
      </div>
    </label>
	<% end -%>

	<%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %></div>
	<% end %>

</div> 

